ALTER POLICY "Self"
ON "public"."retros_messages"
TO authenticated
USING (
  EXISTS (
    SELECT 1
    FROM retros
    WHERE retros."UUID" = retros_messages."retroUUID"
      AND retros."userUUID" = (select auth.uid())
  )
)
WITH CHECK (
  EXISTS (
    SELECT 1
    FROM retros
    WHERE retros."UUID" = retros_messages."retroUUID"
      AND retros."userUUID" = (select auth.uid())
  )
);